{
  "query": {
    "constant_score": {
      "filter": {
        "bool": {
          "should": [
            { "bool": {
              "must": [
                { "term": { "folder": "inbox" }},
                { "term": { "read": false }}
              ]
            }},
            { "bool": {
              "must_not": {
                "term": { "folder": "inbox" }
              },
              "must": {
                "term": { "important": true }
              }
            }}
          ]
        }
      }
    }
  }
}